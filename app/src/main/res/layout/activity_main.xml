<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8D3BE"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Log in"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="40dp"
        android:textStyle="bold"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Email"
        android:textColor="#000000"


        android:textSize="20sp" />

    <EditText
        android:id="@+id/loginrecup"
        android:layout_width="310dp"
        android:layout_height="30dp"

        android:width="4dp"
        android:background="@drawable/textlines"
        android:color="@color/black"

        android:ems="10"
        android:inputType="textPersonName"


        android:onClick="btnLoginClick"


        android:textColor="@color/black" />

    <TextView
        android:id="@+id/alert1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Format email  incorrect"
        android:textColor="#FF0000"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Mot de passe"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/motdepasselog"
        android:layout_width="310dp"
        android:layout_height="30dp"

        android:ems="10"
        android:inputType="textPassword"
        android:background="@drawable/textlines"
        />

    <TextView
        android:id="@+id/alert2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Mot de passe incorrect"
        android:textColor="#FF0000"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonrecup"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="#348C72"
        android:fontFamily="@font/comfortaa_light"
        android:onClick="btnLoginClick"
        android:text="Connexion"
        android:textColor="#000000"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/creeuncompte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Crée un compte"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/motdepassoublie"
        android:layout_width="144dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comfortaa_light"
        android:text="Mot de passe ou identifiant oublié?"
        android:textAlignment="center"
        android:textColor="#000000" />

</LinearLayout>