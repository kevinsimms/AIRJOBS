<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F1F4F0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivProfil"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentStart="false"

                    android:layout_alignParentEnd="false"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/shape_round_shadow"
                    android:elevation="16dp"
                    tools:srcCompat="@tools:sample/avatars" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPrenomNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:gravity="center_horizontal"
                android:textColor="#0B0B0B"
                android:textSize="25dp"
                tools:text="Prenom et Nom" />

            <TextView
                android:id="@+id/tvMetier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#4E4A4A"
                android:textStyle="italic"
                tools:text="Ingénieur d'affaires" />

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:textAlignment="center"
                tools:text="Diplômé de l’école d’ingénieurs INSA Lyon, je souhaite appliquer mes connaissances techniques à Prodways Group. Je peux vous aider à innover et optimiser vos procédés et produits." />

            <TextView
                android:id="@+id/tvHobbies"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/barrejaune1"
                android:paddingLeft="30dp"
                android:text="Hobbies "
                android:textColor="#FFFFFF"
                android:textSize="20dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/pentagone1">

                <TextView
                    android:id="@+id/tvActivite1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="58dp"
                    android:layout_marginTop="60dp"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="MMMMMMMMM"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvActivite2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="50dp"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvActivite5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="181dp"
                    android:layout_marginEnd="29dp"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvActivite3"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="150dp"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvActivite4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="15dp"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvPersonalite"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/barreor"
                android:paddingLeft="30dp"
                android:text="Personnalité "
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQualite1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvQualite2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvQualite3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvQualite4"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tvQualite5"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_corner"
                    android:gravity="center_horizontal"
                    android:text="TextView"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <Button
                android:id="@+id/btnTelecharger"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="telecharger CV" />
        </LinearLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>